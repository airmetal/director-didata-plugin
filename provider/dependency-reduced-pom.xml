<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>dimensiondata</artifactId>
    <groupId>com.cloudera.director</groupId>
    <version>1.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cloudera.director</groupId>
  <artifactId>dimensiondata-provider</artifactId>
  <name>Cloudera-Director-DimensionData-Plugin</name>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>com.typesafe</pattern>
                  <shadedPattern>${shade-prefix}.com.typesafe</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google</pattern>
                  <shadedPattern>${shade-prefix}.com.google</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.dimensiondata</pattern>
                  <shadedPattern>${shade-prefix}.com.dimensiondata</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache</pattern>
                  <shadedPattern>${shade-prefix}.org.apache</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.fasterxml</pattern>
                  <shadedPattern>${shade-prefix}.com.fasterxml</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javax.annotation</pattern>
                  <shadedPattern>${shade-prefix}.javax.annotation</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.joda</pattern>
                  <shadedPattern>${shade-prefix}.org.joda</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.jayway</pattern>
                  <shadedPattern>${shade-prefix}.com.jayway</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.glassfish</pattern>
                  <shadedPattern>${shade-prefix}.com.glassfish</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javax.ws</pattern>
                  <shadedPattern>${shade-prefix}.javax.ws</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javax.inject</pattern>
                  <shadedPattern>${shade-prefix}.javax.inject</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>jersey.repackaged</pattern>
                  <shadedPattern>${shade-prefix}.jersey.repackaged</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.jvnet</pattern>
                  <shadedPattern>${shade-prefix}.org.jvnet</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>javassist</pattern>
                  <shadedPattern>${shade-prefix}.javassist</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.aopalliance</pattern>
                  <shadedPattern>${shade-prefix}.org.aopalliance</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>${shade-prefix}.org.slf4j</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.hamcrest</pattern>
                  <shadedPattern>${shade-prefix}.org.hamcrest</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>net.sf</pattern>
                  <shadedPattern>${shade-prefix}.net.sf</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objenesis</pattern>
                  <shadedPattern>${shade-prefix}.org.objenesis</shadedPattern>
                </relocation>
              </relocations>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <createDependencyReducedPom>true</createDependencyReducedPom>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>cloudera.repo</id>
      <name>Cloudera Repository</name>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>com.cloudera.director</groupId>
      <artifactId>director-spi-v1</artifactId>
      <version>1.0.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <launcher-class>com.cloudera.director.dimensiondata.DimensionDataLauncher</launcher-class>
    <slf4j.version>1.7.10</slf4j.version>
    <java.version>1.8</java.version>
    <junit.version>4.12</junit.version>
    <maven-compiler-plugin.version>3.3</maven-compiler-plugin.version>
    <maven-shade-plugin.version>2.3</maven-shade-plugin.version>
    <shade-prefix>com.cloudera.director.dimensiondata.shaded</shade-prefix>
    <awaitility.version>1.7.0</awaitility.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <google-api-services-compute.version>v1-rev80-1.20.0</google-api-services-compute.version>
    <dimensiondata-cloud-api.version>2.3.3-SNAPSHOT</dimensiondata-cloud-api.version>
    <director-spi-v1.version>1.0.0</director-spi-v1.version>
    <typesafe-config.version>1.2.0</typesafe-config.version>
    <joda-time.version>2.8</joda-time.version>
  </properties>
</project>

